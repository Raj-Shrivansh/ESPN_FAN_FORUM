<div class="card mb-2">
  <div class="card-body">
    <h4><%= comment.content%></h4><p class="float-end">By- <%=comment.user_id %></p>
    <p>Comment at <%= time_ago_in_words(comment.created_at) %></p>
    <% if user_signed_in? %>
    <% if current_user.id == comment.user_id%>
        <%= link_to 'Edit', edit_message_comment_path(comment.message, comment),class:"btn btn-info"%>
        <%= link_to 'Delete', message_comment_path(comment.message, comment),data: {turbo_method: 'delete', turbo_confirm: "Are you sure"},class:"btn btn-outline-danger"%>
    <% end %>
    <% end %>
  </div>
</div>